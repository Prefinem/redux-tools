{
	"author": {
		"email": "prefinem@gmail.com",
		"name": "Prefinem",
		"url": "https://prefinem.com"
	},
	"description": "Redux Tools to make redux easy",
	"devDependencies": {
		"@babel/cli": "7.12.1",
		"@babel/core": "7.12.3",
		"@babel/plugin-proposal-object-rest-spread": "7.12.1",
		"@babel/preset-react": "7.12.1",
		"babel-eslint": "10.1.0",
		"eslint": "7.12.1",
		"eslint-config-prettier": "6.14.0",
		"eslint-plugin-babel": "5.3.1",
		"eslint-plugin-jest": "24.1.0",
		"eslint-plugin-react": "7.21.5",
		"husky": "4.3.0",
		"jest": "26.6.1",
		"lint-staged": "10.4.2",
		"prettier": "2.1.2"
	},
	"homepage": "https://github.com/Prefinem/redux-tools",
	"husky": {
		"hooks": {
			"pre-commit": "yarn staged"
		}
	},
	"license": "MIT",
	"lint-staged": {
		"*.js": [
			"eslint --fix",
			"prettier --config ./.prettierrc.json --write",
			"jest --bail --findRelatedTests",
			"git add"
		]
	},
	"main": "./index.js",
	"name": "redux-tools",
	"peerDependencies": {
		"isomorphic-fetch": ">=2",
		"redux": ">=4",
		"redux-saga": ">=0.16"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Prefinem/redux-tools"
	},
	"resolutions": {
		"js-yaml": "3.14.0",
		"mem": "8.0.0",
		"webpack-dev-server": "3.11.0"
	},
	"scripts": {
		"build": "rm -rf dist/ && NODE_ENV=production ./node_modules/.bin/babel src/ --out-dir dist",
		"clean": "yarn lint && yarn prettify",
		"eslint-check": "eslint --print-config .eslintrc.json | eslint-config-prettier-check",
		"lint": "eslint src/** --fix",
		"prettify": "prettier --config ./.prettierrc.json --write \"src/**\"",
		"staged": "lint-staged",
		"test": "jest --coverage"
	},
	"version": "3.2.0"
}
